<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cooking"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/img">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:srcCompat="@drawable/copy_of_final_empowering_the_nation_logo___non_profit_bold_design" />

    <TextView
        android:id="@+id/txtintro"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Welcome to
Empowering the Nation"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="27sp"
        android:textStyle="bold" />



    <!-- 🍳 Cooking Section -->
    <TextView
        android:id="@+id/txtCookingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cooking"
        android:textColor="#E91E63"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/txtFees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees: R750"
        android:textColor="#FF9800"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtPurpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purpose: To prepare and cook nutritious family meals"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content:\n• Nutritional requirements for a healthy body\n• Types of protein, carbohydrates, and vegetables\n• Planning meals\n• Tasty and nutritious recipes\n• Preparation and cooking of meals"
        android:textColor="#444444"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="4dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnback"
        android:layout_width="389dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="back"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>
