<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacts"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/chile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:srcCompat="@drawable/copy_of_final_empowering_the_nation_logo___non_profit_bold_design" />

    <TextView
        android:id="@+id/txtintro"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Welcome to
Empowering the nation- contact details "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="383dp"
        android:layout_height="189dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:background="@color/cardview_light_background"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="353dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Contact details"
                android:textColor="#070707"
                android:textSize="27sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="353dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Telephone: 008 112 7392"
                android:textColor="#070707"
                android:textSize="21sp"
                android:textStyle="|italic" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="353dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Email: Empowerthenation.co.za"
                android:textColor="#070707"
                android:textSize="21sp"
                android:textStyle="|italic" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locations" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFristAid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />


</LinearLayout>

