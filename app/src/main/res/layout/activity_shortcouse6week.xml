<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shortcouse6week"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/chile"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/copy_of_final_empowering_the_nation_logo___non_profit_bold_design" />

    <!-- Intro Text -->
    <TextView
        android:id="@+id/txtshort"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="23dp"
        android:text="Welcome to\nEmpowering the nation, short course"
        android:textColor="@color/white"/>

    <!-- Courses as CheckBoxes -->
    <CheckBox
        android:id="@+id/chkCooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooking - R750"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/chkChildMinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Child Minding - R750"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/chkGardenMaintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garden Maintenance - R750"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="8dp"/>

    <!-- Buttons -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        android:layout_width="389dp"
        android:layout_height="56dp"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="Add"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="389dp"
        android:layout_height="56dp"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="Back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnQuotation"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF9800"
        android:padding="8dp"
        android:text="Quotation"
        android:textColor="@color/white"
        android:textSize="14sp" />


</LinearLayout>
