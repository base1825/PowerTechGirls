<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".longcoursedetails2"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/chile">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:srcCompat="@drawable/copy_of_final_empowering_the_nation_logo___non_profit_bold_design" />

    <!-- Intro Text -->
    <TextView
        android:id="@+id/"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Welcome to\nEmpowering the nation 6 Month course details"
        android:textAlignment="center"
        android:textColor="#FDF9F9"
        android:textSize="27sp"
        android:textStyle="bold" />

    <!-- ScrollView for Courses -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:layout_margin="16dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- First Aid Course -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Aid"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees: R1500"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose: To provide first aid awareness and basic life support"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content:\n• Wounds and bleeding\n• Burns and fractures\n• Emergency scene management\n• Cardio-Pulmonary Resuscitation (CPR)\n• Respiratory distress e.g., Choking, blocked airway"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingBottom="12dp" />

            <!-- Sewing Course -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sewing"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees: R1500"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose: To provide alterations and new garment tailoring service"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content:\n• Types of stitches\n• Threading a sewing machine\n• Sewing buttons, zips, hems, and seams\n• Alterations\n• Designing and sewing new garments"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingBottom="12dp" />

            <!-- Landscaping Course -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landscaping"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees: R1500"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose: To provide landscaping services for new and established gardens"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content:\n• Indigenous and exotic plants and trees\n• Fixed structures (fountains, statues, benches, tables, built-in braai)\n• Balancing of plants and trees in a garden\n• Aesthetics of plant shapes and colours\n• Garden layout"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingBottom="12dp" />

            <!-- Life Skills Course -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Life Skills"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees: R1500"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose: To provide skills to navigate basic life necessities"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content:\n• Opening a bank account\n• Basic labour law (know your rights)\n• Basic reading and writing literacy\n• Basic numeric literacy"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingBottom="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="389dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="Back" />

</LinearLayout>
