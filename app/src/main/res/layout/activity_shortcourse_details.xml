<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shortcourseDetails"
    android:orientation="vertical"
    android:background="@drawable/chile"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:srcCompat="@drawable/copy_of_final_empowering_the_nation_logo___non_profit_bold_design" />

    <TextView
        android:id="@+id/txtintro"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Welcome to
Empowering the nation 6 week course details"
        android:textAlignment="center"
        android:textColor="#FDF9F9"
        android:textSize="27sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="361dp"
        android:layout_height="470dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack1"
        android:layout_width="389dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="Back" />

</LinearLayout>