<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".longcourse"
    android:orientation="vertical"
    android:background="@drawable/img">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/copy_of_final_empowering_the_nation_logo___non_profit_bold_design" />

    <TextView
        android:id="@+id/txtlong"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="23dp"
        android:text="Welcome to
Empowering the Nation, 6 Month Course"
        android:textColor="@color/white"/>

    <!-- Services Checkboxes -->
    <CheckBox
        android:id="@+id/chkFirstAid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Aid - R1500"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/chkSewing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sewing - R1500"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/chkLandscaping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landscaping - R1500"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="8dp"/>

    <CheckBox
        android:id="@+id/chkLifeSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Skills - R1500"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="8dp"/>

    <!-- Add & Back Buttons -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnadd"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="Add"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnback"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="Back"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnQuotation"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF9800"
        android:textColor="@color/white"
        android:text="Quotation"
        android:textSize="14sp"
        android:padding="8dp"/>


</LinearLayout>
